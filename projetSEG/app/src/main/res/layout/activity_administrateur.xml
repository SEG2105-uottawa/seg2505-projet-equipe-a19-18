<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Administrateur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            app:srcCompat="@drawable/unnamed" />

        <TextView
            android:id="@+id/textView700"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:padding="15dp"
            android:text="Bienvenue administrateur! Vous êtes connecté en tant qu'admin"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="25dp"
            android:background="@color/colorPrimary"
            android:fontFamily="casual"
            android:onClick="nouveauService"
            android:text="Créer un service"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="25dp"
            android:background="@color/colorPrimary"
            android:fontFamily="casual"
            android:onClick="listeServices"
            android:text="Modifier ou supprimer un service"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@color/colorPrimary"
            android:fontFamily="casual"
            android:onClick="supprimerCompte"
            android:text="Supprimer un compte"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>