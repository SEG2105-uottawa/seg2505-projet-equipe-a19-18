<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            app:srcCompat="@drawable/unnamed" />


        <TextView
            android:id="@+id/textViewPatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Bienvenue patient! Vous êtes connecté en tant que patient"
            android:textColor="#000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="25dp"
            android:background="@color/colorPrimary"
            android:fontFamily="casual"
            android:onClick="recherche"
            android:text="Rechercher une clinique"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>